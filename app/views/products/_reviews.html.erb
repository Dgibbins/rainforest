<% if current_user %>
  <h4> New Review! </h4>

  <%= form_for([@product, @review]) do |f| %>
    <% if @reivew.errors.any? %>
      <div id="error_explanation">
          <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being made =(</h2>

        <ul>
          <% @review.errors.full_messages.each do |massage| %>
            <li><%= massage %></li>
          <%end%>
        </ul>

      </div>
    <% end %>

    <div class="field">\
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% else %>
  <p>Please <%= link_to "log in", new_sessions_path %> if you'd like to add a review.</p>
<% end %>
